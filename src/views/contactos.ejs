<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registros de Contactos</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-50 font-sans">
   <header class="bg-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto px-4 py-3 flex justify-between items-center">
    <!-- Logo -->
    <div class="flex items-center">
      <h1 class="text-2xl font-bold text-blue-600">
        Event<span class="text-blue-800">Space</span>
      </h1>
      <p class="ml-2 text-sm text-blue-400 hidden sm:block">Espacios que inspiran</p>
    </div>

    <!-- Menú para móvil -->
    <button 
      class="md:hidden text-blue-600 focus:outline-none"
      aria-label="Abrir menú"
      onclick="document.querySelector('.main-nav').classList.toggle('hidden')"
    >
      <i class="fas fa-bars text-2xl"></i>
    </button>

    <!-- Navegación principal -->
    <nav class="main-nav hidden md:block">
      <ul class="flex flex-col md:flex-row md:items-center space-y-2 md:space-y-0 md:space-x-6">
        <li>
          <a href="#home" class="text-blue-600 hover:text-blue-800 font-medium transition-colors px-2 py-1 rounded hover:bg-blue-50">
            Inicio
          </a>
        </li>
        <li>
          <a href="#services" class="text-blue-600 hover:text-blue-800 font-medium transition-colors px-2 py-1 rounded hover:bg-blue-50">
            Servicios
          </a>
        </li>
        <li>
          <a href="#spaces" class="text-blue-600 hover:text-blue-800 font-medium transition-colors px-2 py-1 rounded hover:bg-blue-50">
            Espacios
          </a>
        </li>
        <li>
          <a href="/getPayment" class="text-blue-600 hover:text-blue-800 font-medium transition-colors px-2 py-1 rounded hover:bg-blue-50">
            Pagos
          </a>
        </li>
        <li>
          <a href="/admin/contacts" class="text-blue-600 hover:text-blue-800 font-medium transition-colors px-2 py-1 rounded hover:bg-blue-50">
            Contacto
          </a>
        </li>
        <li>
          <a href="/login" class="bg-blue-100 text-blue-700 hover:bg-blue-200 font-medium transition-colors px-3 py-2 rounded-md">
            Login
          </a>
        </li>
        <% if(isAdmin){ %>
        <li>
          <a href="/logout" class="bg-red-100 text-red-600 hover:bg-red-200 font-medium transition-colors px-3 py-2 rounded-md">
            Logout
          </a>
        </li>
        <% } %>
      </ul>
    </nav>
  </div>
</header>
<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
        <h1 class="text-2xl md:text-3xl font-bold text-gray-800 flex items-center gap-2">
            <i class="fas fa-address-book"></i> Registros de Contacto
        </h1>
        <div class="flex items-center gap-2 mt-4 md:mt-0">
            <span class="text-2xl font-semibold text-blue-600"><%= contacts.length %></span>
            <span class="text-gray-500">Registros</span>
        </div>
    </div>
    
    <!-- Search Form -->
    <form id="filterForm" class="mb-8 w-full max-w-2xl mx-auto">
        <div class="relative">
            <input
            type="text"
            id="searchInput"
            placeholder="Buscar por nombre o correo..."
            class="w-full px-4 py-3 pr-10 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 placeholder-gray-400 text-gray-700"
            />
            <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                <i class="fas fa-search text-gray-400"></i>
            </div>
        </div>
    </form>

    <!-- Contacts Container -->
    <div id="contactsContainer" class="bg-white rounded-xl shadow-sm overflow-hidden">
        <% if (contacts.length > 0) { %>
        <!-- Table for larger screens -->
        <div class="hidden md:block overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr class="text-left text-gray-500 text-sm font-medium">
                        <th class="px-6 py-3">Nombre</th>
                        <th class="px-6 py-3">Email</th>
                        <th class="px-6 py-3">Comentario</th>
                        <th class="px-6 py-3">País</th>
                        <th class="px-6 py-3">IP</th>
                        <th class="px-6 py-3">Fecha</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    <% contacts.forEach(contact => { %>
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                <div class="flex-shrink-0 h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-medium">
                                    <%= contact.nombre.charAt(0).toUpperCase() %>
                                </div>
                                <span class="font-medium text-gray-900"><%= contact.nombre %></span>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <a href="mailto:<%= contact.email %>" class="text-blue-600 hover:underline"><%= contact.email %></a>
                        </td>
                        <td class="px-6 py-4 text-gray-600">
                            <%= contact.comentario.substring(0, 50) %><%= contact.comentario.length > 50 ? '...' : '' %>
                        </td>
                        <td class="px-6 py-4 text-gray-600">
                            <%= contact.pais %>
                        </td>
                        <td class="px-6 py-4 text-gray-600">
                            <%= contact.ip %>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-gray-500">
                                <div><%= new Date(contact.createdAt).toLocaleDateString() %></div>
                                <div class="text-xs"><%= new Date(contact.createdAt).toLocaleTimeString() %></div>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Cards for mobile -->
        <div class="md:hidden grid grid-cols-1 gap-4 p-4">
            <% contacts.forEach(contact => { %>
            <div class="bg-white rounded-lg shadow p-4 border border-gray-100">
                <div class="flex justify-between items-start mb-3">
                    <div class="flex items-center gap-3">
                        <div class="flex-shrink-0 h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-medium">
                            <%= contact.nombre.charAt(0).toUpperCase() %>
                        </div>
                        <div>
                            <h3 class="font-medium text-gray-900"><%= contact.nombre %></h3>
                            <a href="mailto:<%= contact.email %>" class="text-sm text-blue-600 hover:underline"><%= contact.email %></a>
                        </div>
                    </div>
                    <span class="text-xs text-gray-500">
                        <%= new Date(contact.createdAt).toLocaleDateString() %>
                    </span>
                </div>
                
                <div class="space-y-2 text-sm">
                    <div>
                        <span class="font-medium text-gray-700">Comentario:</span>
                        <p class="text-gray-600"><%= contact.comentario.substring(0, 50) %><%= contact.comentario.length > 50 ? '...' : '' %></p>
                    </div>
                    <div class="flex justify-between">
                        <div>
                            <span class="font-medium text-gray-700">País:</span>
                            <span class="text-gray-600"><%= contact.pais %></span>
                        </div>
                        <div>
                            <span class="font-medium text-gray-700">IP:</span>
                            <span class="text-gray-600"><%= contact.ip %></span>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
        <% } else { %>
        <!-- Empty state -->
        <div class="text-center py-12">
            <div class="mx-auto w-48 h-48 bg-gray-100 rounded-full flex items-center justify-center mb-4">
                <i class="fas fa-inbox text-4xl text-gray-400"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-1">No hay registros</h3>
            <p class="text-gray-500">No hay registros de contactos disponibles</p>
        </div>
        <% } %>
    </div>
</div>
<script>
  // Cerrar menú al hacer clic en un enlace (para móviles)
  document.querySelectorAll('.main-nav a').forEach(link => {
    link.addEventListener('click', () => {
      if (window.innerWidth < 768) {
        document.querySelector('.main-nav').classList.add('hidden');
    }
});
});
</script>
<script src='/js/filter.js'></script>
</body>
</html>